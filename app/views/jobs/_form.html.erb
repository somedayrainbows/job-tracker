<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title %><br><br>

  <%= f.label :description %>:
  <%= f.text_field :description %><br><br>

  <%= f.label :level_of_interest %>:
  <%= f.number_field :level_of_interest %><br><br>

  <%= f.label :city %>:
  <%= f.text_field :city %><br><br>

  <%= f.label :category_id %>
  <%= f.collection_select(:category_id, Category.all, :id, :title) %>

  <%= link_to "category not listed? add a new one!", new_category_path %><br><br>

  <%= f.submit %>
<% end %>
